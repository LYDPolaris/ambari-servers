<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>presto_user</name>
    <value>presto</value>
    <description>presto user</description>
  </property>
  <property>
    <name>presto_group</name>
    <value>presto</value>
    <description>presto group</description>
  </property>
  <property>
    <name>presto_base_dir</name>
    <value>/opt/presto</value>
    <description>presto installation directory</description>
  </property>
  <property>
    <name>presto_log_dir</name>
    <value>/var/log/presto</value>
    <description>presto log directory</description>
  </property>
  <property>
    <name>presto_pid_dir</name>
    <value>/var/run/presto</value>
    <description>presto pid directory</description>
  </property>
  <property>
    <name>presto_server_download_url</name>
    <value>http://hdp-server/tars/presto-server-0.170.tar.gz</value>
    <description>presto server tarball download url</description>
  </property>
  <property>
    <name>presto_cli_download_url</name>
    <value>http://hdp-server/tars/presto-cli-0.170-executable.jar</value>
    <description>presto cli download url</description>
  </property>

</configuration>
